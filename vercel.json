{
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "includeFiles": "node_modules"
      // REMOVED: "module": "commonjs"  <-- This was the error
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  // ADD this global build environment variable to force CommonJS for the functions
  "build": {
    "env": {
      "NODE_RUNTIME_TYPE": "CommonJS"
    }
  }
}
